<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurarSonidoAlarma">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgrounda_app"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="73dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/Logo"
                app:srcCompat="@drawable/alarm_clock_12179137" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/title_sonido"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/title_sonido"
                android:textAlignment="center"
                android:textColor="@color/rosa"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="@string/title_sonido" />

            <Spinner
                android:id="@+id/spinner_sonido"
                android:layout_width="310dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_spinner"
                android:contentDescription="@array/sonido_opciones"
                android:padding="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="150dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_text"
                    android:ems="10"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/escribe"
                    android:inputType="text"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="70dp"
                    android:layout_height="59dp"
                    android:layout_marginEnd="50dp"
                    android:layout_weight="1"
                    android:background="@color/azul_osc"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/btn_buscar" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/border_song"
                android:contentDescription="@string/cancion"
                android:fontFamily="@font/roboto_regular"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/cancion"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:text="@string/cancion" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:contentDescription="@string/tip"
                app:srcCompat="@drawable/tip" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:background="@drawable/background_button"
                android:fontFamily="@font/roboto_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="30dp"
                android:paddingTop="0dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp"
                android:text="@string/btn_siguiente"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>