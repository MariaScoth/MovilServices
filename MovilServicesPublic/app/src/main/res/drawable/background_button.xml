<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del botÃ³n -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/azul_claro"/> <!-- Color del fondo -->
            <corners android:radius="4dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Stroke solo en la parte inferior -->
    <item android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/azul_osc"/>
            <corners android:radius="4dp"/>
            <stroke
                android:width="4dp"
                android:color="@color/azul_claro"/> <!-- Color y ancho del stroke -->
        </shape>
    </item>
</layer-list>
