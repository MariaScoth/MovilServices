        android:scaleType="fitXY"
        android:src="@drawable/bombilla"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/button4"
        android:layout_width="114dp"
        android:layout_height="111dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="75dp"
        android:background="@null"
        android:contentDescription="Descripci贸n de la imagen 4"
        android:scaleType="fitXY"
        android:src="@drawable/llamadatelefonica"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="114dp"
        android:layout_height="111dp"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:background="@null"
        android:contentDescription="Descripci贸n de la imagen 1"
        android:scaleType="fitXY"
        android:src="@drawable/agua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="114dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="100dp"
        android:background="@null"
        android:contentDescription="Descripci贸n de la imagen 2"
        android:scaleType="fitXY"
        android:src="@drawable/gasnatural"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    </androidx.constraintlayout.widget.ConstraintLayout>