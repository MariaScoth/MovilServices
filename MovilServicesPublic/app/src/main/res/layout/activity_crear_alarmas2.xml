<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearAlarmas2">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgrounda_app"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="73dp"
                android:layout_gravity="right"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/Logo"
                app:srcCompat="@drawable/alarm_clock_12179137" />

            <Button
                android:id="@+id/button_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:background="@drawable/background_button"
                android:fontFamily="@font/roboto_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="30dp"
                android:paddingTop="0dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp"
                android:text="SERVICIOS PUBLICOS"
                android:textColor="@color/white"
                android:textColorLink="@color/azul_osc"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button_alarmas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:background="@drawable/background_button"
                android:fontFamily="@font/roboto_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="30dp"
                android:paddingTop="0dp"
                android:paddingRight="30dp"
                android:paddingBottom="0dp"
                android:text="OTROS SERVICIOS"
                android:textColor="@color/white"
                android:textColorLink="@color/azul_osc"
                android:textSize="25sp" />






        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>